<div class="tab-pane {% if isfirst is defined %}active{% endif %} span{% if loop.last %}{{ lastcolwidth }}{% else %}{{ colwidth }}{% endif %}" id="tab-{{ tabid }}">
{% set colid = loop.index0 %}
{% for feed in cols %}
    <div class="thumbnail item" id="item-{{ colid }}-{{ loop.index0 }}">
        <div class="header">
            <div class="btn-group">
                <a class="btn viewgroup"><i class="icon-minus-sign"></i></a>
            </div>
            <span><a target="_blank" href="{{ feed.feed }}">{{ feed.name }}</a></span>
        </div>
        <div class="items">
            <div class="loading"
                    data-href="{{ feed.feed }}"
                    data-items="{{ feed.maxitems is defined ? feed.maxitems : config.maxitems }}"
                    data-age="{{ feed.maxage is defined ? feed.maxage : config.maxage }}"></div>
        </div>
    </div>
{% endfor %}
</div>